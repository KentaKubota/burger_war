<?xml version="1.0"?>

<!-- Caution: Please run this command '$ roslaunch burger_war setup_sim.launch' before this program running -->
<launch>

    <!-- Run the rviz using a rviz setting file-->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find burger_war)/rviz/config.rviz"/>

    <!-- Run the gmapping -->
    <node pkg="gmapping" type="slam_gmapping" name="gmapping" output="log">
        <remap from="scan" to="red_bot/scan" />
        <remap from="odom" to="red_bot/odom" />
        <param name="base_frame" value="red_bot/base_link"/>
        <param name="odom_frame" value="red_bot/odom"/>
    </node>

    <!-- Run the myTeleop.py -->
    <node pkg="burger_war" type="myTeleop.py" name="myTeleop" output="screen"/>

</launch>
